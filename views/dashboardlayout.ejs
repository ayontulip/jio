<body>
<!--****************************************************************************************************************************-->
<header>
	<div class="container-fluid">
    	<div class="row">
        	<div class="col-sm-4 col-xs-4 logo">
            	<a href="#"><img src="/../main/images/dashboard.png"></a>
            </div>
            <div class="col-sm-8 col-xs-8 drop">
            	<div class="dropdown">
                    <% var fullname = "",
                        avatar ="/../main/images/user.png";
                        if(currentuser) {
                            if(currentuser.first_name) {
                                fullname = ", "+currentuser.first_name;
                                if(currentuser.last_name) {
                                    fullname += " "+currentuser.last_name;
                                }
                                fullname +="!";
                            }
                            if(currentuser.avatar) {
                                avatar= currentuser.avatar;
                            }
                        }
                     %>
                	<h1><span>Welcome</span> <%= fullname %></h1><a href="#"  class=""  data-toggle="dropdown" > <img class="img-circle" src=<%= avatar %> ></a>
                      <ul class="dropdown-menu pull-right">
    						<li><a href="#">Profile</a></li>
   							 <li><a href="#">Edit</a></li>
                             <li><%- EH.link_to('Logout', '/logout') %></li>
 					 </ul>
                </div>
            </div>
        </div>
    </div>
</header>
  <% if (flash.has('all')) {
    var obj =flash.all(); 
    Object.keys(obj).forEach(function (key) { 
        if (key == "error") { %>
        <div class="col-sm-4 alert alert-danger" style="position: absolute; top: 10px; right: 10px; line-height: 2;z-index: 999999;">
       <% }else{ %>
       <div class="col-sm-4 alert alert-<%=key%>" style="position: absolute; top: 10px; right: 10px; line-height: 2;z-index: 999999;">
        <% };%>
           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
               <span aria-hidden="true">&times;</span>
           </button>
           <%- obj[key] %>
        </div>
    <% }); } %>
      <%-body -%>
<footer>
	<div class="container-fluid">
    	<div class="row">
        	<div class="col-md-8 col-sm-8">
