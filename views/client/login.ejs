<% layout('../loginlayout') -%>
<% block('title', '- Client Login') -%>
<% if (errors) {%>
  <% errors.forEach(function (error) { %>
  <div class="col-sm-5 alert alert-danger" style="position: absolute; top: 10px; right: 10px; line-height: 2; z-index: 100;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
    </button>
    <%= __(error) %>
    </div>
  <% }) %>
<% } %>
<% if (successs) {%>
  <% successs.forEach(function (success) { %>
  <div class="col-sm-5 alert alert-success" style="position: absolute; top: 10px; right: 10px; line-height: 2; z-index: 100;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
    </button>
    <%= __(success) %>
    </div>
  <% }) %>
<% } %>

<!--************************************************************************************-->
<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-6 form-text">
                <form action="/client/login" method="post">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <h1>TAKING YOU<span class="account">ONE STEP CLOSER</span><span class="clint"> TO YOUR VIEWERS.</span></h1>
                    <div class="form-box">
                        <div class="form-input">
                            <input type="text" name="email" placeholder="Email" required />
                        </div>
                        <div class="form-input">
                            <input type="password" name="password" placeholder="Password" required/>
                        </div>
                         <div class="form-input">
                            <input type="submit" class="submit" value="Login"/>
                        </div>
                        <div class="linkBox">
                            <a href="/client/forgot-password">Forgot your password?</a>
                        </div>
                    </div>
                   
                    <input type="hidden" name="client" value="<%= _csrf %>" />
                </form>
            </div>
        </div>
    </div>
</section>