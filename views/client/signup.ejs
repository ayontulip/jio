<% layout('../loginlayout') -%>
<% block('title', '- Client Signup') -%>
<% if (errors) {%>
  <% errors.forEach(function (error) { %>
  <div class="col-sm-5 alert alert-danger" style="position: absolute; top: 10px; right: 10px; line-height: 2; z-index: 100;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
    </button>
    <%- __(error) %>
    </div>
  <% }) %>
<% } %>

<!--************************************************************************************-->
<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-6 form-text">
                <form action="/client-save" method="post">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <h1>CREATE<span class="account">NEW ACCOUNT</span><span class="clint"> FOR CLIENTS</span></h1>
                    <div class="form-box">
                        <div class="form-input">
                            <input type="email" name="email" placeholder="Email" required />
                        </div>
                        <div class="form-input">
                            <input type="text" name="companyName" placeholder="Company Name" required/>
                        </div>
                         <div class="form-input">
                            <input type="submit" class="submit" value="Create"/>
                        </div>
                        <a href="/client">Have an account ?</a><br>
                    </div>
                    <input type="hidden" name="client" value="<%= _csrf %>" />
                </form>
            </div>
        </div>
    </div>
</section>